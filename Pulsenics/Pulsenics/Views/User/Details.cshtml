@model Pulsenics.Models.User

@{
    ViewData["Title"] = "Details";
}

@*This view facilitates the viewing of User details.*@
<h1>User Details</h1>

<div>
    <div class="row">
        <div class="col-sm-5"><h4>User</h4></div>
        <div class="col-sm-3"><a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a></div>
    </div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
    </dl>
</div>


<h2>Files Assigned to @Model.Name</h2>

@if (Model.UserFiles != null && Model.UserFiles.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>User Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userFile in Model.UserFiles)
            {
                <tr>
                    <td>@userFile.File.Id</td>
                    <td>@userFile.File.FileName</td>
                    <td>
                        <a asp-action="DeleteAssignment" asp-route-userId="@userFile.UserId" asp-route-fileId="@userFile.File.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users assigned to this file.</p>
}


<div>
    <a asp-action="Index">Back to List</a>
</div>
